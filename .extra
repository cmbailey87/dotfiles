PATH=/usr/local/sbin:${PATH}:./vendor/bin:~/.composer/vendor/bin
PATH={$PATH}:/Applications/Postgres.app/Contents/Versions/9.4/bin

# Git credentials
GIT_AUTHOR_NAME="Troy Harvey"
GIT_AUTHOR_EMAIL="troy.harvey@generationtux.com"

GIT_COMMITTER_NAME="$GIT_AUTHOR_NAME"
GIT_COMMITTER_EMAIL="$GIT_AUTHOR_EMAIL"

git config --global user.name "$GIT_AUTHOR_NAME"
git config --global user.email "$GIT_AUTHOR_EMAIL"

# The next line updates PATH for the Google Cloud SDK.
source '/Users/troyharvey/google-cloud-sdk/path.bash.inc'

# The next line enables shell command completion for gcloud.
source '/Users/troyharvey/google-cloud-sdk/completion.bash.inc'

# Node.js NVM
export NVM_DIR=~/.nvm
source $(brew --prefix nvm)/nvm.sh

# Go
export GOPATH=$HOME/work
export PATH=$PATH:/usr/local/opt/go/libexec/bin

# Git branch bash completion
if [ -f ~/.git-completion.bash ]; then
  . ~/.git-completion

  # Add git completion to aliases
  __git_complete g __git_main
  __git_complete gc _git_checkout
  __git_complete gp _git_pull
fi
